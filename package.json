{
  "name": "vtexy",
  "version": "1.0.1",
  "main": "src/index.js",
  "repository": "https://github.com/ganobrega/vtexy.git",
  "author": "Gabriel Nobrega <gnobrega.contato@gmail.com>",
  "license": "MIT",
  "bin": {
    "vtexy": "cli.js"
  },
  "scripts": {
    "lint": "prettier --write **/*.js",
    "dev": "nodemon --exec node cli.js --inspect --",
    "ui": "parcel src/server/plugins/ui/src/index.html -d src/server/plugins/ui/dist --open",
    "ui:build": "parcel build src/server/plugins/ui/src/index.html -d src/server/plugins/ui/dist",
    "docs": "npx serve docs",
    "docs:deploy": "cd docs && npx presite",
    "commit": "npx git-cz",
    "test": "mocha test/**/*js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">= 8.17.0"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "globals": {},
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {}
  },
  "dependencies": {
    "axios-cache-adapter": "^2.5.0",
    "body": "^5.1.0",
    "browser-sync": "^2.26.7",
    "chalk": "^3.0.0",
    "conf": "^6.2.0",
    "consola": "^2.11.3",
    "copyfiles": "^2.2.0",
    "cors": "^2.8.5",
    "cosmiconfig": "^6.0.0",
    "cpy": "^8.1.0",
    "cross-env": "^7.0.2",
    "debug": "^4.1.1",
    "deepdash": "^5.0.3",
    "device": "^0.3.10",
    "directory-tree": "^2.2.4",
    "dotenv": "^8.2.0",
    "enquirer": "^2.3.5",
    "execa": "^4.0.2",
    "express": "^4.17.1",
    "figlet": "^1.4.0",
    "find-up": "^4.1.0",
    "glob": "^7.1.6",
    "grommet": "^2.13.0",
    "grommet-icons": "^4.4.0",
    "i18n": "^0.8.4",
    "isdev": "^1.0.1",
    "jsonc": "^2.0.0",
    "lodash": "^4.17.15",
    "log-symbols": "^3.0.0",
    "log-update": "^4.0.0",
    "matcher": "^3.0.0",
    "meow": "^5.0.0",
    "morgan": "^1.10.0",
    "naml": "^2.0.0",
    "node-persist": "^3.0.5",
    "ora": "^4.0.4",
    "p-pipe": "^3.0.0",
    "posthtml": "^0.12.0",
    "posthtml-parser": "^0.4.2",
    "prompts": "^2.3.2",
    "prop-types": "^15.7.2",
    "query-string": "^6.11.1",
    "ramda": "^0.27.0",
    "react": "^16.13.1",
    "react-animated-tree": "^1.0.10",
    "react-dom": "^16.13.1",
    "react-spring": "^8.0.27",
    "redent": "^3.0.0",
    "slugify": "^1.4.0",
    "string": "^3.3.3",
    "styled-components": "^5.1.1",
    "terminal-link": "^2.1.1",
    "transformer-proxy": "^0.3.5",
    "trim-newlines": "^3.0.0",
    "url-parse": "^1.4.7",
    "velocity": "^0.7.2",
    "velocityjs": "^2.0.0",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-react": "^7.9.4",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.3",
    "prettier": "^1.19.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  }
}
